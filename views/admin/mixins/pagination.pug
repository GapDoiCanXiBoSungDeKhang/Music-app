mixin pagination(route)
    .d-flex.justify-content-between.align-items-center.mt-4
        // Hiển thị giới hạn số lượng
        form(action= prefixName + `/${route}`, method='GET', class='d-flex.align-items-center')
            label.me-2.text-secondary(for='limitSelect') Hiển thị:
            select#limitSelect.form-select.form-select-sm.w-auto(
                name='limit',
                onchange='this.form.submit()'
            )
                option(value='5' selected=(limit == 5)) 5
                option(value='10' selected=(limit == 10)) 10
                option(value='20' selected=(limit == 20)) 20
                option(value='50' selected=(limit == 50)) 50
            input(type='hidden', name='q', value=q || '')
            input(type='hidden', name='status', value=status || 'all')

        // Phân trang
        if totalPages > 1
            nav
                ul.pagination.mb-0
                    if currentPage > 1
                        li.page-item
                            a.page-link(
                                href=`${prefixName}/${route}?page=${currentPage - 1}&limit=${limit}&q=${q || ''}&status=${status || 'all'}`) Trước
                    else
                        li.page-item.disabled
                            span.page-link Trước

                    each num in [...Array(totalPages).keys()].map(n => n + 1)
                        if num === currentPage
                            li.page-item.active
                                span.page-link= num
                        else
                            li.page-item
                                a.page-link(
                                    href=`${prefixName}/${route}?page=${num}&limit=${limit}&q=${q || ''}&status=${status || 'all'}`)= num

                    if currentPage < totalPages
                        li.page-item
                            a.page-link(
                                href=`${prefixName}/${route}?page=${currentPage + 1}&limit=${limit}&q=${q || ''}&status=${status || 'all'}`) Sau
                    else
                        li.page-item.disabled
                            span.page-link Sau